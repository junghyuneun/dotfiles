{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "shell_integration": true,
  "iterm_features": [
    "current_dir",
    "prompt_mark",
    "remote_host"
  ],
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "leading_diamond": "\u250f",
      "trailing_diamond": "\ue0b4",
      "segments": [
        {
          "foreground": "#faf5cf",
          "background": "#e8d15d",
          "style": "diamond",
          "template": "{{ if .WSL }}WSL at {{ end }} {{.Icon}} ",
          "type": "os"
        },
        {
          "background_templates": [
            "{{ if gt .Code 0 }}#ffffff{{ end }}"
          ],
          "style": "plain",
          "template": " {{ if gt .Code 0 }}<#f1184c></> {{ end }}",
          "type": "status"
        },
        {
          "background": "#213340",
          "foreground": "#c8e5f7",
          "style": "plain",
          "template": " {{ .UserName }} ",
          "type": "session"
        },
        {
          "type": "ipify",
          "style": "plain",
          "foreground": "#000000",
          "background": "#ecb744",
          "template": " {{ .IP }} ",
          "properties": {
            "http_timeout": 1000
          },
          "cache": {
            "duration": "15m",
            "strategy": "session"
          }
        },
        {
          "background": "#281b84",
          "foreground": "#ccfafc",
          "properties": {
            "time_format": "<#fbd7fc>\ue641 15:04:05</> <#ef87f8>|</> \uf073 2 Jan, Mon"
          },
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "leading_diamond": "\u2523",
      "overflow": "break",
      "segments": [
        {
          "background": "#dafbe1",
          "foreground": "#0969da",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#5c6578",
          "foreground": "#9fe0b3",
          "properties": {
            "folder_icon": " \uf07c ",
            "folder_separator_icon": "/",
            "home_icon": "\ueb06 ~",
            "style": "agnoster_short",
            "max_depth": 3,
            "display_root": true
          },
          "template": " {{ .Path }} ",
          "type": "path",
          "style": "diamond",
          "trailing_diamond": "\ue0b4"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "segments": [
        {
          "style": "diamond",
          "foreground": "#ffa5d8",
          "background": "#0a52b0",
          "leading_diamond": "\u2514",
          "type": "session",
          "template": "{{ if .Root }} ˗ˏˋˎˊ˗ {{ else }}    󰻳  {{ end }}"
        },
        {
          "style": "plain",
          "foreground": "#ffa5d8",
          "template": "\u276f ",
          "type": "text"
        }
      ]
    }
  ],
  "version": 3
}
